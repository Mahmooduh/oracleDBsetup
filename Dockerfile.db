FROM gvenzl/oracle-xe:21

USER root
RUN microdnf install -y unzip curl && \
    microdnf clean all

# Copy the initialization script to the directory where gvenzl/oracle-xe executes them on first startup
COPY 01_install_apex.sh /container-entrypoint-initdb.d/01_install_apex.sh

RUN chmod +x /container-entrypoint-initdb.d/01_install_apex.sh

USER oracle
